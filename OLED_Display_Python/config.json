{
    "name": "I2C OLED Display (Python) 32Bit",
    "version": "2022.11.04.001",
    "slug": "i2c_oled_display_python",
    "description": "This addon lets you display to your I2C OLED for a Pi 4 (32bit/armhf only) with the ssd1306 OLED.",
    "arch": [
        "armhf",
        "armv7",
        "aarch64"
    ],
    "log_level": "info",
    "startup": "services",
    "hassio_api": true,
    "auth_api": true,
    "ingress": false,
    "app_armor": true,
    "host_network": true,
    "privileged": [
        "SYS_ADMIN"
    ],
    "devices": [
        "/dev/i2c-1"
    ],
    "gpio": true,
    "stage": "experimental",
    "full_access": true,
    "url": "http://192.168.0.2:3000/personal/HomeAssistant_I2C_OLED",
    "boot": "manual",
    "options": {
        "Show_Splash_Screen": true,
        "Show_Network_Info": true,
        "Show_Storage_Info": true,
        "Show_Memory_Info": true,
        "Show_CPU_Info": true,
        "Temperature_Unit": "C",
        "Slide_Duration": 5,
        "Stop_Auto_Run": false
    },
    "schema": {
        "Show_Splash_Screen": "bool",
        "Show_Network_Info": "bool",
        "Show_Storage_Info": "bool",
        "Show_Memory_Info": "bool",
        "Show_CPU_Info": "bool",
        "Temperature_Unit": "list(C|F)?",
        "Slide_Duration": "int",
        "Stop_Auto_Run": "bool"
    }
}